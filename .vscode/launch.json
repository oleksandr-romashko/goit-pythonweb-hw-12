{
    // Press F5 to start debugging
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API: Debug (local)",
            "type": "debugpy", // VS Code's Python debugger
            "request": "launch",
            "module": "src", // run as Python module `python -m src`
            "args": [],
            "jinja": true, // enable template debugging (optional)
            "cwd": "${workspaceFolder}", // project root
            "envFile": "${workspaceFolder}/.env", // load enviromental variables from .env file
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "APP_ENV": "dev",
                "DB_HOST": "localhost",
                "CACHE_HOST": "localhost",
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "API: Run (local, no debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "src",
            "noDebug": true, // <-- run without debugger
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "APP_ENV": "dev",
                "DB_HOST": "localhost",
                "CACHE_HOST": "localhost",
            },
            "console": "integratedTerminal"
        }
    ]
}